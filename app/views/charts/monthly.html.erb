<h3>Mastercoin monthly Simple Send charts</h3>
<div id="container" style="width:100%; height:400px;">

  <script>
    $(function () {
      $('#container').highcharts({
          chart: {
                type: 'column'
          },
          title: {
              text: 'Monthly Mastercoin Transactions',
              x: -20 //center
          },
          subtitle: {
            text: 'Simple send transactions excluding test coins',
              x: -20
          },
          xAxis: {
              categories: <%= raw SimpleSend.collect_monthly_date.to_json %>
              ,
              labels: {
                    rotation: -45,
                    align: 'right',
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif'
                    }
              }
          },
          yAxis: {
              title: {
                  text: 'Amount transferred'
              },
              plotLines: [{
                  value: 0,
                  width: 1,
                  color: '#808080'
              }]
          },
          tooltip: {
            formatter: function() {
              return 'Amount transferred on ' + this.x + ' is  MSC ' + Math.round(this.y * 100000000) /  100000000;
            }
          },
          legend: {
              layout: 'vertical',
              align: 'right',
              verticalAlign: 'middle',
              borderWidth: 0
          },
          series: [ <%= raw SimpleSend.collect_monthly_chart_data.to_json %> ]
	    });
		});
  </script>
</div>


<%= content_for(:title) do %>
  Mastercoin monthly Simple Send charts
<% end %>
